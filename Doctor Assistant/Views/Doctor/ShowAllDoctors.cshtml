<link href="`/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/css/style.css" rel="stylesheet">

<style>
     body{
        background-image:url('https://andrearugg.com/wp-content/uploads/2015/06/23_LobbyEast.jpg');
          background-repeat: no-repeat;
	      background-size: cover;
	      background-attachment: fixed;
     }
</style>


<section class="vh-100" style="margin-bottom:-70px">
    <div class="container h-100" data-aos="fade-up">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-5">
                        <div class="row justify-content-center">
                            <table class="table">
                                <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Department</th>
                                            <th></th>
                                        </tr>
                                </thead>
                                <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                            @if(item.deptID == 1)
                                            {
                                                <td> Brain</td>
                                            }
                                            else if (item.deptID == 2)
                                            {
                                                <td> Eye</td>
                                            }
                                            else
                                            {
                                                <td> Admin</td>
                                            }

                                            @if (@TempData["DoctorId"] == item.Id.ToString() )
                                            {
                                                <td>
                                                    @Html.ActionLink("", "EditDoctor","Doctor", new {  id=item.Id },new {@class="fas fa-user-edit" , style="color:black"})
                                                    |
                                                    @Html.ActionLink("", "DeleteDoctor", "Doctor", new {  id=item.Id  }, new {@class="fa fa-trash" , style="color:black"})
                                                    
                                                    
                                                </td>
                                            }
                                            else
                                            {
                                                <td>ff</td>
                                            }

                                            @*if (@TempData["DoctorId"] == item.Id.ToString())
                                                {
                                                    <td>
                                                        @Html.ActionLink("", "EditDoctor","Doctor", new {  id=item.Id },new {@class="fas fa-user-edit" , style="color:black"})
                                                        |
                                                        @Html.ActionLink("", "DeleteDoctor", "Doctor", new {  id=item.Id  }, new {@class="fa fa-trash" , style="color:black"})
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>ff</td>
                                                }*@

                                            </tr>
                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@{
    if(TempData["VaildateDoctor"] != null){
        <script>
            alert("@TempData["VaildateDoctor"]")
        </script>
    }

}

