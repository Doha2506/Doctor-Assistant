
@{
    ViewData["Title"] = "Patient Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model PatientJoinStrokeDisease

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Doctor_Assistant.styles.css" asp-append-version="true" />

<!-- Favicons -->
<link href="~/img/favicon.png" rel="icon">
<link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

<!-- Vendor CSS Files -->
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
<link href="~/vendor/animate.css/animate.min.css" rel="stylesheet">
<link href="~/vendor/aos/aos.css" rel="stylesheet">
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="`/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="`/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/css/style.css" rel="stylesheet">

<style>
    body {
        background-image: url('https://news.mit.edu/sites/default/files/styles/news_article__image_gallery/public/images/201504/big-data-medicine-model_0.jpg?itok=SS8arw8X');
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
    label{
        margin-top:7px;
        margin-bottom:5px;
        font-weight:bold;

    }

</style>


<section class="vh-100" style="margin-top:130px; margin-bottom:-90px;">
    <div class="container h-100" data-aos="fade-up">
        <div class="row d-flex justify-content-center align-items-center h-10">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div style="margin-left:650px;">
                                <h3>Details of Patient @Model.patient.Name</h3>
                            </div>
                                <div class="row">
                                    <div class="col">
                                        <label for="name" >Name</label>
                                        <input type="text" id="name" class="form-control" value="@Model.patient.Name" readonly/>
                                    </div>

                                    <div class="col">
                                         <label for="email" >Email</label>
                                         <input type="email" id="email" class="form-control" value="@Model.patient.Email" readonly />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label for="Age">Age</label>
                                        <input type="text" id="Age" class="form-control" value="@Model.stroke.Age" readonly />
                                    </div>

                                    <div class="col">
                                        <label for="WorkType">Work Type</label>
                                        <input type="text" id="WorkType" class="form-control" value="@Model.stroke.WorkType" readonly />
                                    </div>

                                    <div class="col">
                                        <label for="ResidenceType">Residence Type</label>
                                        @if (Model.stroke.ResidenceType == true)
                                        {
                                            <input type="text" id="ResidenceType" class="form-control" value="True" readonly />
                                        }
                                        else
                                        {
                                            <input type="text" id="ResidenceType" class="form-control" value="False" readonly />
                                        }
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label for="SmokingStatus">Smoking Status</label>
                                        <input type="text" id="SmokingStatus" class="form-control" value="@Model.stroke.SmokingStatus" readonly />
                                    </div>

                                    <div class="col">
                                        <label for="BMI">BMI</label>
                                        <input type="text" id="BMI" class="form-control" value="@Model.stroke.BMI" readonly />
                                    </div>

                                    <div class="col">
                                        <label for="AvrGlucoseLevel">AvrGlucoseLevel</label>
                                        <input type="text" id="AvrGlucoseLevel" class="form-control" value="@Model.stroke.AvrGlucoseLevel" readonly />
                                    </div>
                                </div>
                             
                                <div class="row">
                                    <div class="col">
                                        <label for="HeartDisease">Heart Disease</label>
                                        @if (Model.stroke.HeartDisease == true)
                                        {
                                            <input type="text" id="HeartDisease" class="form-control" value="True" readonly/>
                                        }
                                        else
                                        {
                                            <input type="text" id="HeartDisease" class="form-control" value="False" readonly />
                                        }
                                    </div>

                                    <div class="col">
                                        <label for="Hypertension">Hypertension</label>
                                        @if(Model.stroke.Hypertension == true){
                                            <input type="text" id="Hypertension" class="form-control" value="True" readonly />
                                        }
                                        else{
                                            <input type="text" id="Hypertension" class="form-control" value="False" readonly />
                                        }
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <label for="Hypertension">Is Male ?</label>
                                        @if (Model.stroke.IsMale == true)
                                        {
                                            <input type="text" id="IsMale" class="form-control" value="True" readonly />
                                        }
                                        else
                                        {
                                            <input type="text" id="IsMale" class="form-control" value="False" readonly />
                                        }
                                    </div>
                                    <div class="col">
                                        <label for="IsMarried">Is Married ?</label>
                                        @if (Model.stroke.IsMarried == true)
                                        {
                                            <input type="text" id="IsMarried" class="form-control" value="True" readonly />
                                        }
                                        else
                                        {
                                            <input type="text" id="IsMarried" class="form-control" value="False" readonly />
                                        }
                                    </div>
                                </div>

                               <div class="row">
                                    <div class="col">
                                        <label for="Stroke">Has Stroke ?</label>
                                        @if (Model.stroke.Stroke == true)
                                        {
                                            <input type="text" id="Stroke" class="form-control" value="True" readonly />
                                        }
                                        else
                                        {
                                            <input type="text" id="Stroke" class="form-control" value="False" readonly />
                                        }
                                    </div>
                               </div>

                               <div class="row">
                                    <div class="col">
                                        <label for="result">Result</label>
                                        <textarea id="result" class="form-control" readonly>@Model.stroke.Result </textarea>
                                    </div>

                                </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script src="~/js/main.js"></script>

