@model IEnumerable<Doctor_Assistant.Models.PatientJoinStrokeDisease>

@{
    ViewData["Title"] = "Show Patients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
     body{
          background-image:url('https://i.pinimg.com/originals/cd/89/ce/cd89ce83448728d12462ed7e22f306f7.jpg');
          background-repeat: no-repeat;
	      background-size: cover;
	      background-attachment: fixed;
     }
</style>


<section class="vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-5">
                        <div class="row justify-content-center">
                            <table class="table">
                                <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Patient Name</th>
                                            <th scope="col">Doctor Name</th>
                                            <th scope="col">Has Stroke ?</th>
                                            <th scope="col">Result</th>
                                            <th></th>
                                        </tr>
                                </thead>
                                <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.stroke.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.patient.Email)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.doctor.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.stroke.Stroke)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.stroke.Result)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "EditStrokePatient","Stroke", new {  id=item.stroke.Id  }) |
                                                    @Html.ActionLink("Details", "DetailsOfStrokePatient", "Stroke", new { id=item.stroke.Id  }) |
                                                    @Html.ActionLink("Delete", "DeleteStrokePatient", "Stroke", new {  id=item.stroke.Id  })
                                                </td>
                                            </tr>
                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>






