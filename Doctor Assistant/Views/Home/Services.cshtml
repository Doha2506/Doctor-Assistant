<section id="services" class="services services" style="margin-top:100px; >
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Services</h2>
        </div>
        
        @if (@TempData["DoctorDept"].Equals("Brain"))
        {
            <div class="row" style="margin-top:30px;">
                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="100">
                    <a asp-controller="Ray" asp-action="AddNewBrainTumorPatient">
                        <div class="icon"><i class="fas fa-brain"></i></div>
                        <h4 class="title">Brain Tumor Classification</h4>
                    </a>
                    <p class="description">
                        The classification of brain tumors is performed by biopsy, which is not usually
                        conducted before definitive brain surgery.
                    </p>

                </div>

                <div class="col-lg-4 col-md-6 icon-box" data-aos="zoom-in" data-aos-delay="200">
                    <a asp-controller="Stroke" asp-action="AddStrokePatient">
