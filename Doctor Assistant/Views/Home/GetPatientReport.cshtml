@model Report

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Doctor_Assistant.styles.css" asp-append-version="true" />

<!-- Favicons -->
<link href="~/img/favicon.png" rel="icon">
<link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

<!-- Vendor CSS Files -->
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
<link href="~/vendor/animate.css/animate.min.css" rel="stylesheet">
<link href="~/vendor/aos/aos.css" rel="stylesheet">
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="`/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="`/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/css/style.css" rel="stylesheet">

<style>
    
    body {
        background-image: url('https://news.mit.edu/sites/default/files/styles/news_article__image_gallery/public/images/201504/big-data-medicine-model_0.jpg?itok=SS8arw8X');
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
   
</style>


<section class="vh-100" style="margin-bottom:-100px" >
    <div class="container h-100" data-aos="fade-up">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">

                                <table class="table">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col"> Stroke </th>
                                            <th scope="col"> Brain Tumor </th>
                                            <th scope="col"> Alzehimer  </th>
                                            <th scope="col"> DR  </th>

                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            @if (Model.Stroke.Stroke == true){
                                                <td>
                                                    <input type="checkbox" checked disabled />
                                                </td>

                                            }else{
                                                <td>
                                                    <input type="checkbox"  disabled />
                                                </td>
                                            }


                                        @if (Model.BrainTumor.result != string.Empty)
                                        {
                                             <td>
                                                <input type="text" style="display:inline;width:200px;margin:7px;" 
                                                class="form-control" value="@Model.BrainTumor.result" disabled />
                                                |
                                                @Html.ActionLink("", "ShowPatientRay", "Ray", new {  id=Model.BrainTumor.Id , diseaseId = Model.BrainTumor.DiseaseId  }, new {@class="far fa-eye" , style="color:black"})
                                            </td>
                                        }
                                        else
                                        {
                                            <td></td>

                                        }
                                           

                                        @if (Model.Alzehimer.result != string.Empty)
                                        {
                                            <td>
                                                <input type="text" style="display:inline;width:200px;margin:7px;"
                                                   class="form-control" value="@Model.Alzehimer.result" disabled />
                                                |
                                                @Html.ActionLink("", "ShowPatientRay", "Ray", new {  id=Model.Alzehimer.Id , diseaseId = Model.Alzehimer.DiseaseId  }, new {@class="far fa-eye" , style="color:black"})
                                            </td>
                                        }
                                        else
                                        {
                                            <td></td>

                                        }

                                           

                                            @if(Model.DR.result != string.Empty)
                                            {
                                                <td>
                                                    <input type="text" style="display:inline;width:200px;margin:7px;"
                                                       class="form-control" value="@Model.DR.result" disabled />
                                                    |
                                                @Html.ActionLink("", "ShowPatientRay", "Ray", new {  id=Model.DR.Id, diseaseId = Model.DR.DiseaseId   }, new {@class="far fa-eye" , style="color:black"})
                                                </td>
                                            }
                                            else
                                            {
                                                <td></td>

                                            }

                                        </tr>
                                        
                                    </tbody>
                                    </table>




                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
