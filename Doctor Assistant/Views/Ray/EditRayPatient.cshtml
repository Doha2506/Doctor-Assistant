
@{
    ViewData["Title"] = "EditPatientRay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Ray



<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Doctor_Assistant.styles.css" asp-append-version="true" />

<!-- Favicons -->
<link href="~/img/favicon.png" rel="icon">
<link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

<!-- Vendor CSS Files -->
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
<link href="~/vendor/animate.css/animate.min.css" rel="stylesheet">
<link href="~/vendor/aos/aos.css" rel="stylesheet">
<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
<link href="`/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
<link href="`/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
<link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

<!-- Template Main CSS File -->
<link href="~/css/style.css" rel="stylesheet">


<style>
    body {
        background-image: url('https://news.mit.edu/sites/default/files/styles/news_article__image_gallery/public/images/201504/big-data-medicine-model_0.jpg?itok=SS8arw8X');
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    label {
        margin-top: 7px;
        margin-bottom: 5px;
        font-weight: bold;
    }

</style>

@{
    TempData["rayId"] = Model.Id;
    TempData["patientId"] = Model.patientId;
    TempData["docId"] = Model.doctorId;
    
}


<section class="vh-100" style="margin-top:30px; margin-bottom:-70px;">
    <div class="container h-100" data-aos="fade-up">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">

                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Patient @Model.patientName</p>

                                    <form class="mx-1 mx-md-4" asp-action="EditRayPatient" asp-controller="Ray" method="post" enctype="multipart/form-data">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example3c" class="form-control" value="@Model.patientName" asp-for="patientName" placeholder="Name" required />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="email" id="form3Example4c" class="form-control" value="@Model.patientEmail" asp-for="patientEmail" placeholder="Password" required />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <select id="form3Example4cd" class="form-control" asp-for="DiseaseId">
                                                    @if(Model.DiseaseId == 1)
                                                    {
                                                        <option selected value="1">Brain Tumor</option>
                                                        <option value="2">Stroke</option>
                                                        <option value="3">Alzehimer</option>
                                                        <option value="4">Diabetic Retinopathy</option>

                                                    }else if(Model.DiseaseId == 2)
                                                    {
                                                        <option value="1">Brain Tumor</option>
                                                        <option selected value="2">Stroke</option>
                                                        <option value="3">Alzehimer</option>
                                                        <option value="4">Diabetic Retinopathy</option>

                                                    }else if(Model.DiseaseId == 3)
                                                    {
                                                        <option value="1">Brain Tumor</option>
                                                        <option value="2">Stroke</option>
                                                        <option selected value="3">Alzehimer</option>
                                                        <option value="4">Diabetic Retinopathy</option>

                                                    }else if(Model.DiseaseId == 4)
                                                    {
                                                        <option value="1">Brain Tumor</option>
                                                        <option value="2">Stroke</option>
                                                        <option value="3">Alzehimer</option>
                                                        <option selected value="4">Diabetic Retinopathy</option>
                                                    }

                                                </select>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="form3Example3c" class="form-control" value="@Model.result" asp-for="result" placeholder="Result" />
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <input asp-for="imageDate" type="file">
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-dark btn-lg">Edit</button>
                                       
                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="@TempData["Image"]" alt="image" style="width:550px;height:300px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



