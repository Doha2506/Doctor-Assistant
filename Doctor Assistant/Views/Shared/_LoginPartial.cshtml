    @if (@TempData["DoctorName"] != null)
    {
        <li class="nav-item text-light dropdown">
            <a class="btn btn-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Services
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li>
                    <a class="dropdown-item" asp-controller="Stroke" asp-action="ShowStrokePatients">Show Stroke Patients</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Doctor" asp-action="ShowAllDoctors">Show All Doctors</a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Doctor" asp-action="Logout">Logout</a>
                </li>

            </ul>
        </li>

